{
  "mcpServers": {
    "confluence": {
      "command": "scripts/mcp-confluence.sh",
      "args": []
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory@2026.1.26"],
      "env": {
        "MEMORY_FILE_PATH": "/home/dev/projects/claude-agents/fm-review-system/.claude-memory/memory.jsonl"
      }
    },
    "github": {
      "command": "scripts/mcp-github.sh",
      "args": []
    },
    "langfuse": {
      "command": "scripts/mcp-langfuse.sh",
      "args": []
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@0.0.68",
        "--headless",
        "--no-sandbox",
        "--browser", "chromium",
        "--isolated",
        "--viewport-size", "1280x720"
      ]
    },
    "agentation": {
      "command": "npx",
      "args": ["-y", "agentation-mcp@1.2.0", "server", "--mcp-only"]
    },
    "graphiti": {
      "command": "scripts/mcp-graphiti.sh",
      "args": []
    },
    "local-rag": {
      "command": "npx",
      "args": ["-y", "mcp-local-rag"],
      "env": {
        "BASE_DIR": "./knowledge-base",
        "DB_PATH": "./.rag-db/",
        "CACHE_DIR": "./.rag-models/",
        "RAG_HYBRID_WEIGHT": "0.6"
      }
    }
  }
}
