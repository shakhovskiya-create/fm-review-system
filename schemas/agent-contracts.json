{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FM Review System Agent Contracts v2.2 (multi-platform: domainObjects, platform context)",
  "description": "JSON Schema for inter-agent communication. v2.0: added agentSummary sidecar, Agent6_Presenter",

  "definitions": {
    "defenseClassification": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "E", "F", "G", "H", "I"],
      "description": "Agent 3 defense classification: A=Accounted (already covered in FM), B=ConsciousChoice (trade-off documented), C=NeedsEdit (gap, fix required), D=NeedsClarification (backlog/unclear), E=OutOfScope (not applicable), F=DuplicateOrLater (duplicate or deferred), G=InvalidAssumption (incorrect premise), H=RoleConflict (agents disagree), I=SlowsDown (control hinders business speed)"
    },

    "agentSummary": {
      "type": "object",
      "required": ["agent", "command", "timestamp", "fmVersion", "project", "status"],
      "description": "Lightweight JSON sidecar (_summary.json) produced by every agent after execution",
      "properties": {
        "agent": {
          "type": "string",
          "description": "Agent name, e.g. Agent1_Architect"
        },
        "command": {
          "type": "string",
          "description": "Command executed, e.g. /audit, /auto"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "FM version that was analyzed/processed"
        },
        "project": {
          "type": "string",
          "description": "Project name, e.g. PROJECT_SHPMNT_PROFIT"
        },
        "status": {
          "type": "string",
          "enum": ["completed", "partial", "failed"]
        },
        "counts": {
          "type": "object",
          "description": "Agent-specific counts (findings, tests, etc.)",
          "properties": {
            "critical": { "type": "integer" },
            "high": { "type": "integer" },
            "medium": { "type": "integer" },
            "low": { "type": "integer" },
            "total": { "type": "integer" }
          }
        },
        "outputFiles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of Markdown files produced by this run"
        },
        "appliedChanges": {
          "type": "integer",
          "description": "Number of changes applied to FM (if /apply was executed)"
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about this run"
        }
      }
    },

    "finding": {
      "type": "object",
      "required": ["id", "severity", "category", "description", "fmSection"],
      "description": "Machine-readable finding (CRITICAL-A1: JSON sidecar alongside Markdown)",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$",
          "description": "Finding ID, e.g. CRITICAL-001"
        },
        "severity": {
          "type": "string",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
        },
        "category": {
          "type": "string",
          "enum": ["LOGIC", "UX", "PERFORMANCE", "SECURITY", "INTEGRATION", "1C"]
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "fmSection": {
          "type": "string",
          "description": "FM section reference, e.g. 3.4, 3.7.1"
        },
        "recommendation": {
          "type": "string"
        },
        "classificationType": {
          "$ref": "#/definitions/defenseClassification",
          "description": "Agent 3 defense classification (A-I)"
        },
        "status": {
          "type": "string",
          "enum": ["Open", "Resolved", "Wontfix", "Deferred"]
        },
        "location": {
          "type": "string",
          "description": "Section or line reference in FM (legacy, use fmSection)"
        },
        "technicalFeasibility": {
          "type": "object",
          "description": "Agent 5 technical assessment (X-L5 feedback loop: Agent 1→5→3)",
          "properties": {
            "verdict": {
              "type": "string",
              "enum": ["feasible", "feasible_with_caveats", "needs_alternative", "not_applicable"],
              "description": "feasible=can implement as-is, feasible_with_caveats=possible but has constraints, needs_alternative=Agent 1 recommendation not viable"
            },
            "effort": {
              "type": "string",
              "enum": ["trivial", "low", "medium", "high"],
              "description": "Implementation effort estimate"
            },
            "note": {
              "type": "string",
              "description": "Technical note: constraints, alternative approach, or why not applicable"
            }
          },
          "required": ["verdict"]
        }
      }
    },

    "testCase": {
      "type": "object",
      "required": ["id", "title", "steps", "expected"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^TC-[0-9]{3}$"
        },
        "title": {
          "type": "string"
        },
        "traceability": {
          "type": "string",
          "description": "Reference to finding or requirement"
        },
        "preconditions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "steps": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "expected": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["P1", "P2", "P3"]
        }
      }
    },

    "traceabilityEntry": {
      "type": "object",
      "required": ["findingId", "tests", "fmSection"],
      "description": "Links a finding to its test cases and FM section (FC-10A)",
      "properties": {
        "findingId": {
          "type": "string",
          "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$",
          "description": "Finding ID from Agent 1 audit"
        },
        "tests": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Test case IDs covering this finding"
        },
        "fmSection": {
          "type": "string",
          "description": "FM section reference (e.g. 3.4, 3.7.1)"
        },
        "tzObject": {
          "type": "string",
          "description": "TZ object reference from Agent 5 (optional)"
        },
        "status": {
          "type": "string",
          "enum": ["covered", "partial", "uncovered"],
          "description": "Coverage status"
        }
      }
    },
    "traceabilityMatrix": {
      "type": "object",
      "required": ["project", "fmVersion", "timestamp", "entries"],
      "description": "Full traceability matrix linking findings to tests and TZ objects (FC-10A)",
      "properties": {
        "project": { "type": "string" },
        "fmVersion": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "timestamp": { "type": "string", "format": "date-time" },
        "entries": {
          "type": "array",
          "items": { "$ref": "#/definitions/traceabilityEntry" }
        },
        "summary": {
          "type": "object",
          "properties": {
            "totalFindings": { "type": "integer" },
            "covered": { "type": "integer" },
            "partial": { "type": "integer" },
            "uncovered": { "type": "integer" }
          }
        }
      }
    },

    "contextSchema": {
      "type": "object",
      "required": ["project", "pageId", "fmVersion"],
      "description": "Required context keys for /auto mode (FC-09C). Core keys are required; agent-specific are optional with defaults.",
      "properties": {
        "project": {
          "type": "string",
          "description": "REQUIRED. Project name (e.g. PROJECT_SHPMNT_PROFIT)"
        },
        "pageId": {
          "type": "string",
          "description": "REQUIRED. Confluence PAGE_ID"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "REQUIRED. Current FM version (semantic)"
        },
        "applyScope": {
          "type": "string",
          "enum": ["all", "critical_high", "critical_only", "none"],
          "default": "critical_high",
          "description": "OPTIONAL. Scope for /apply (default: critical_high)"
        },
        "focus": {
          "type": "string",
          "enum": ["full", "logic", "1c", "speed", "manipulations", "ux"],
          "default": "full",
          "description": "OPTIONAL. Audit/simulation focus (default: full)"
        },
        "audience": {
          "type": "string",
          "enum": ["business", "executive", "developer", "universal"],
          "default": "business",
          "description": "OPTIONAL. Presentation audience (default: business)"
        },
        "applyMode": {
          "type": "string",
          "enum": ["auto", "interactive"],
          "default": "interactive",
          "description": "OPTIONAL. Apply mode (default: interactive)"
        },
        "platform": {
          "type": "string",
          "enum": ["1c", "go", "python", "hybrid"],
          "default": "1c",
          "description": "OPTIONAL. Target platform (default: 1c). Affects Agent 5 template selection."
        }
      }
    },

    "uxFinding": {
      "type": "object",
      "required": ["id", "role", "scenario", "problem", "impact"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^UX-(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$"
        },
        "role": {
          "type": "string",
          "description": "User role affected"
        },
        "scenario": {
          "type": "string"
        },
        "problem": {
          "type": "string"
        },
        "impact": {
          "type": "string",
          "description": "Impact on time/efficiency"
        },
        "recommendation": {
          "type": "string"
        }
      }
    },

    "defenseResponse": {
      "type": "object",
      "required": ["commentId", "response", "action", "classificationType"],
      "properties": {
        "commentId": {
          "type": "string"
        },
        "originalComment": {
          "type": "string"
        },
        "response": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["Accept", "Reject", "Partial", "Defer"]
        },
        "classificationType": {
          "$ref": "#/definitions/defenseClassification",
          "description": "Classification of the original finding/comment (A-I)"
        },
        "changes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "publishResult": {
      "type": "object",
      "required": ["pageId", "version", "url", "timestamp"],
      "properties": {
        "pageId": {
          "type": "string"
        },
        "version": {
          "type": "integer"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["success", "partial", "failed"]
        }
      }
    },

    "bpmnResult": {
      "type": "object",
      "required": ["diagramName", "format", "status"],
      "properties": {
        "diagramName": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": ["drawio", "png", "svg"]
        },
        "confluenceUrl": {
          "type": "string",
          "format": "uri"
        },
        "lanes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "nodeCount": {
          "type": "integer"
        },
        "status": {
          "type": "string",
          "enum": ["success", "failed"]
        }
      }
    },

    "findingsRegistry": {
      "type": "object",
      "required": ["project", "fmVersion", "timestamp", "findings"],
      "description": "Central findings registry aggregating findings from Agent 1, 2, 4, 5. Enables cross-agent deduplication.",
      "properties": {
        "project": { "type": "string" },
        "fmVersion": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "timestamp": { "type": "string", "format": "date-time" },
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "source", "severity", "category", "description", "status"],
            "properties": {
              "id": { "type": "string", "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW|UX-CRITICAL|UX-HIGH|UX-MEDIUM|UX-LOW)-[0-9]{3}$" },
              "source": { "type": "string", "enum": ["Agent1_Architect", "Agent2_Simulator", "Agent4_QA", "Agent5_TechArchitect"] },
              "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
              "category": { "type": "string" },
              "description": { "type": "string", "minLength": 10 },
              "location": { "type": "string" },
              "status": { "type": "string", "enum": ["Open", "Resolved", "Wontfix", "Deferred"] },
              "defenseType": { "$ref": "#/definitions/defenseClassification", "description": "Agent 3 classification (if defended)" },
              "tests": { "type": "array", "items": { "type": "string" }, "description": "TC-XXX IDs covering this finding" }
            }
          }
        },
        "summary": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "bySeverity": {
              "type": "object",
              "properties": {
                "critical": { "type": "integer" },
                "high": { "type": "integer" },
                "medium": { "type": "integer" },
                "low": { "type": "integer" }
              }
            },
            "bySource": { "type": "object", "additionalProperties": { "type": "integer" } },
            "byStatus": { "type": "object", "additionalProperties": { "type": "integer" } }
          }
        }
      }
    },

    "agentOutput_Agent0_Creator": {
      "type": "object",
      "description": "Output schema for Agent 0 (Creator)",
      "properties": {
        "fmContent": { "type": "string" },
        "version": { "type": "string" },
        "sections": { "type": "array", "items": { "type": "string" } }
      }
    },

    "agentOutput_Agent1_Architect": {
      "type": "object",
      "description": "Output schema for Agent 1 (Architect)",
      "required": ["findings", "summary"],
      "properties": {
        "findings": {
          "type": "array",
          "items": { "$ref": "#/definitions/finding" }
        },
        "summary": {
          "type": "object",
          "properties": {
            "critical": { "type": "integer" },
            "high": { "type": "integer" },
            "medium": { "type": "integer" },
            "low": { "type": "integer" }
          }
        }
      }
    },

    "agentOutput_Agent2_Simulator": {
      "type": "object",
      "description": "Output schema for Agent 2 (Role Simulator)",
      "required": ["uxFindings", "roles"],
      "properties": {
        "uxFindings": {
          "type": "array",
          "items": { "$ref": "#/definitions/uxFinding" }
        },
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "agentOutput_Agent3_Defender": {
      "type": "object",
      "description": "Output schema for Agent 3 (Defender)",
      "required": ["responses"],
      "properties": {
        "responses": {
          "type": "array",
          "items": { "$ref": "#/definitions/defenseResponse" }
        },
        "accepted": { "type": "integer" },
        "rejected": { "type": "integer" }
      }
    },

    "agentOutput_Agent4_QA": {
      "type": "object",
      "description": "Output schema for Agent 4 (QA Tester)",
      "required": ["testCases"],
      "properties": {
        "testCases": {
          "type": "array",
          "items": { "$ref": "#/definitions/testCase" }
        },
        "coverage": {
          "type": "object",
          "properties": {
            "requirements": { "type": "number" },
            "findings": { "type": "number" }
          }
        }
      }
    },

    "agentOutput_Agent5_TechArchitect": {
      "type": "object",
      "description": "Output schema for Agent 5 (Tech Architect). Platform-aware: 1C or Go/microservices.",
      "properties": {
        "platform": {
          "type": "string",
          "enum": ["1c", "go", "python", "hybrid"],
          "description": "Target platform for this architecture"
        },
        "domainObjects": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Platform-agnostic domain objects (aggregates, value objects, services)"
        },
        "objects1C": {
          "type": "array",
          "items": { "type": "string" },
          "description": "1C-specific objects (deprecated alias for domainObjects when platform=1c)"
        },
        "goServices": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Go microservices (when platform=go or hybrid)"
        },
        "integrations": { "type": "array", "items": { "type": "string" } },
        "estimate": { "type": "string" }
      }
    },

    "agentOutput_Agent6_Presenter": {
      "type": "object",
      "description": "Output schema for Agent 6 (Presenter)",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["presentation", "report", "summary"]
        },
        "audience": { "type": "string" },
        "sections": { "type": "array", "items": { "type": "string" } }
      }
    },

    "agentOutput_Agent7_Publisher": {
      "type": "object",
      "description": "Output schema for Agent 7 (Publisher)",
      "required": ["result"],
      "properties": {
        "result": { "$ref": "#/definitions/publishResult" }
      }
    },

    "agentOutput_Agent8_BPMN": {
      "type": "object",
      "description": "Output schema for Agent 8 (BPMN Designer)",
      "required": ["result"],
      "properties": {
        "result": { "$ref": "#/definitions/bpmnResult" }
      }
    }
  }
}
