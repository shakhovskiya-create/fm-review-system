{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FM Review System Agent Contracts v2.2 (multi-platform: domainObjects, platform context)",
  "description": "JSON Schema for inter-agent communication. v2.0: added agentSummary sidecar, Agent6_Presenter",

  "definitions": {
    "agentSummary": {
      "type": "object",
      "required": ["agent", "command", "timestamp", "fmVersion", "project", "status"],
      "description": "Lightweight JSON sidecar (_summary.json) produced by every agent after execution",
      "properties": {
        "agent": {
          "type": "string",
          "description": "Agent name, e.g. Agent1_Architect"
        },
        "command": {
          "type": "string",
          "description": "Command executed, e.g. /audit, /auto"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "FM version that was analyzed/processed"
        },
        "project": {
          "type": "string",
          "description": "Project name, e.g. PROJECT_SHPMNT_PROFIT"
        },
        "status": {
          "type": "string",
          "enum": ["completed", "partial", "failed"]
        },
        "counts": {
          "type": "object",
          "description": "Agent-specific counts (findings, tests, etc.)",
          "properties": {
            "critical": { "type": "integer" },
            "high": { "type": "integer" },
            "medium": { "type": "integer" },
            "low": { "type": "integer" },
            "total": { "type": "integer" }
          }
        },
        "outputFiles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of Markdown files produced by this run"
        },
        "appliedChanges": {
          "type": "integer",
          "description": "Number of changes applied to FM (if /apply was executed)"
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about this run"
        }
      }
    },

    "finding": {
      "type": "object",
      "required": ["id", "severity", "category", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$",
          "description": "Finding ID, e.g. CRITICAL-001"
        },
        "severity": {
          "type": "string",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
        },
        "category": {
          "type": "string",
          "enum": ["LOGIC", "UX", "PERFORMANCE", "SECURITY", "INTEGRATION", "1C"]
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "recommendation": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["Open", "Resolved", "Wontfix", "Deferred"]
        },
        "location": {
          "type": "string",
          "description": "Section or line reference in FM"
        }
      }
    },

    "testCase": {
      "type": "object",
      "required": ["id", "title", "steps", "expected"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^TC-[0-9]{3}$"
        },
        "title": {
          "type": "string"
        },
        "traceability": {
          "type": "string",
          "description": "Reference to finding or requirement"
        },
        "preconditions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "steps": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "expected": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["P1", "P2", "P3"]
        }
      }
    },

    "traceabilityEntry": {
      "type": "object",
      "required": ["findingId", "tests", "fmSection"],
      "description": "Links a finding to its test cases and FM section (FC-10A)",
      "properties": {
        "findingId": {
          "type": "string",
          "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$",
          "description": "Finding ID from Agent 1 audit"
        },
        "tests": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Test case IDs covering this finding"
        },
        "fmSection": {
          "type": "string",
          "description": "FM section reference (e.g. 3.4, 3.7.1)"
        },
        "tzObject": {
          "type": "string",
          "description": "TZ object reference from Agent 5 (optional)"
        },
        "status": {
          "type": "string",
          "enum": ["covered", "partial", "uncovered"],
          "description": "Coverage status"
        }
      }
    },
    "traceabilityMatrix": {
      "type": "object",
      "required": ["project", "fmVersion", "timestamp", "entries"],
      "description": "Full traceability matrix linking findings to tests and TZ objects (FC-10A)",
      "properties": {
        "project": { "type": "string" },
        "fmVersion": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "timestamp": { "type": "string", "format": "date-time" },
        "entries": {
          "type": "array",
          "items": { "$ref": "#/definitions/traceabilityEntry" }
        },
        "summary": {
          "type": "object",
          "properties": {
            "totalFindings": { "type": "integer" },
            "covered": { "type": "integer" },
            "partial": { "type": "integer" },
            "uncovered": { "type": "integer" }
          }
        }
      }
    },

    "contextSchema": {
      "type": "object",
      "required": ["project", "pageId", "fmVersion"],
      "description": "Required context keys for /auto mode (FC-09C). Core keys are required; agent-specific are optional with defaults.",
      "properties": {
        "project": {
          "type": "string",
          "description": "REQUIRED. Project name (e.g. PROJECT_SHPMNT_PROFIT)"
        },
        "pageId": {
          "type": "string",
          "description": "REQUIRED. Confluence PAGE_ID"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "REQUIRED. Current FM version (semantic)"
        },
        "applyScope": {
          "type": "string",
          "enum": ["all", "critical_high", "critical_only", "none"],
          "default": "critical_high",
          "description": "OPTIONAL. Scope for /apply (default: critical_high)"
        },
        "focus": {
          "type": "string",
          "enum": ["full", "logic", "1c", "speed", "manipulations", "ux"],
          "default": "full",
          "description": "OPTIONAL. Audit/simulation focus (default: full)"
        },
        "audience": {
          "type": "string",
          "enum": ["business", "executive", "developer", "universal"],
          "default": "business",
          "description": "OPTIONAL. Presentation audience (default: business)"
        },
        "applyMode": {
          "type": "string",
          "enum": ["auto", "interactive"],
          "default": "interactive",
          "description": "OPTIONAL. Apply mode (default: interactive)"
        },
        "platform": {
          "type": "string",
          "enum": ["1c", "go", "python", "hybrid"],
          "default": "1c",
          "description": "OPTIONAL. Target platform (default: 1c). Affects Agent 5 template selection."
        }
      }
    },

    "uxFinding": {
      "type": "object",
      "required": ["id", "role", "scenario", "problem", "impact"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^UX-(CRITICAL|HIGH|MEDIUM|LOW)-[0-9]{3}$"
        },
        "role": {
          "type": "string",
          "description": "User role affected"
        },
        "scenario": {
          "type": "string"
        },
        "problem": {
          "type": "string"
        },
        "impact": {
          "type": "string",
          "description": "Impact on time/efficiency"
        },
        "recommendation": {
          "type": "string"
        }
      }
    },

    "defenseResponse": {
      "type": "object",
      "required": ["commentId", "response", "action"],
      "properties": {
        "commentId": {
          "type": "string"
        },
        "originalComment": {
          "type": "string"
        },
        "response": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["Accept", "Reject", "Partial", "Defer"]
        },
        "changes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "publishResult": {
      "type": "object",
      "required": ["pageId", "version", "url", "timestamp"],
      "properties": {
        "pageId": {
          "type": "string"
        },
        "version": {
          "type": "integer"
        },
        "fmVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["success", "partial", "failed"]
        }
      }
    },

    "bpmnResult": {
      "type": "object",
      "required": ["diagramName", "format", "status"],
      "properties": {
        "diagramName": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": ["drawio", "png", "svg"]
        },
        "confluenceUrl": {
          "type": "string",
          "format": "uri"
        },
        "lanes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "nodeCount": {
          "type": "integer"
        },
        "status": {
          "type": "string",
          "enum": ["success", "failed"]
        }
      }
    },

    "findingsRegistry": {
      "type": "object",
      "required": ["project", "fmVersion", "timestamp", "findings"],
      "description": "Central findings registry aggregating findings from Agent 1, 2, 4, 5. Enables cross-agent deduplication.",
      "properties": {
        "project": { "type": "string" },
        "fmVersion": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "timestamp": { "type": "string", "format": "date-time" },
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "source", "severity", "category", "description", "status"],
            "properties": {
              "id": { "type": "string", "pattern": "^(CRITICAL|HIGH|MEDIUM|LOW|UX-CRITICAL|UX-HIGH|UX-MEDIUM|UX-LOW)-[0-9]{3}$" },
              "source": { "type": "string", "enum": ["Agent1_Architect", "Agent2_Simulator", "Agent4_QA", "Agent5_TechArchitect"] },
              "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
              "category": { "type": "string" },
              "description": { "type": "string", "minLength": 10 },
              "location": { "type": "string" },
              "status": { "type": "string", "enum": ["Open", "Resolved", "Wontfix", "Deferred"] },
              "defenseType": { "type": "string", "enum": ["A", "B", "C", "D", "E", "F", "G", "H", "I"], "description": "Agent 3 classification (if defended)" },
              "tests": { "type": "array", "items": { "type": "string" }, "description": "TC-XXX IDs covering this finding" }
            }
          }
        },
        "summary": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "bySeverity": {
              "type": "object",
              "properties": {
                "critical": { "type": "integer" },
                "high": { "type": "integer" },
                "medium": { "type": "integer" },
                "low": { "type": "integer" }
              }
            },
            "bySource": { "type": "object", "additionalProperties": { "type": "integer" } },
            "byStatus": { "type": "object", "additionalProperties": { "type": "integer" } }
          }
        }
      }
    },

    "agentOutput_Agent0_Creator": {
      "type": "object",
      "description": "Output schema for Agent 0 (Creator)",
      "properties": {
        "fmContent": { "type": "string" },
        "version": { "type": "string" },
        "sections": { "type": "array", "items": { "type": "string" } }
      }
    },

    "agentOutput_Agent1_Architect": {
      "type": "object",
      "description": "Output schema for Agent 1 (Architect + Defender). Supports audit and defense modes.",
      "required": ["findings", "summary"],
      "properties": {
        "findings": {
          "type": "array",
          "items": { "$ref": "#/definitions/finding" }
        },
        "summary": {
          "type": "object",
          "properties": {
            "critical": { "type": "integer" },
            "high": { "type": "integer" },
            "medium": { "type": "integer" },
            "low": { "type": "integer" }
          }
        },
        "defenseResults": {
          "type": "object",
          "description": "Defense mode results (when running as 1:defense in pipeline)",
          "properties": {
            "accepted": { "type": "integer", "description": "Type C findings accepted (gaps to fix)" },
            "rejected": { "type": "integer", "description": "Type B/G/I findings rejected" },
            "deferred": { "type": "integer", "description": "Type D/E/F findings deferred" },
            "classifications": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "findingId": { "type": "string" },
                  "type": { "type": "string", "enum": ["A", "B", "C", "D", "E", "F", "G", "H", "I"] },
                  "action": { "type": "string" },
                  "rationale": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },

    "agentOutput_Agent2_Simulator": {
      "type": "object",
      "description": "Output schema for Agent 2 (Role Simulator)",
      "required": ["uxFindings", "roles"],
      "properties": {
        "uxFindings": {
          "type": "array",
          "items": { "$ref": "#/definitions/uxFinding" }
        },
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "agentOutput_Agent3_Defender": {
      "type": "object",
      "description": "DEPRECATED: merged into Agent 1 (defenseResults). Kept for backward compatibility.",
      "properties": {
        "responses": {
          "type": "array",
          "items": { "$ref": "#/definitions/defenseResponse" }
        },
        "accepted": { "type": "integer" },
        "rejected": { "type": "integer" }
      }
    },

    "agentOutput_Agent4_QA": {
      "type": "object",
      "description": "DEPRECATED: replaced by Agent 13 (QA 1ะก) and Agent 14 (QA Go). Kept for backward compatibility.",
      "properties": {
        "testCases": {
          "type": "array",
          "items": { "$ref": "#/definitions/testCase" }
        },
        "coverage": {
          "type": "object",
          "properties": {
            "requirements": { "type": "number" },
            "findings": { "type": "number" }
          }
        }
      }
    },

    "agentOutput_Agent5_TechArchitect": {
      "type": "object",
      "description": "Output schema for Agent 5 (Tech Architect). Platform-aware: 1C or Go/microservices.",
      "properties": {
        "platform": {
          "type": "string",
          "enum": ["1c", "go", "python", "hybrid"],
          "description": "Target platform for this architecture"
        },
        "domainObjects": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Platform-agnostic domain objects (aggregates, value objects, services)"
        },
        "objects1C": {
          "type": "array",
          "items": { "type": "string" },
          "description": "1C-specific objects (deprecated alias for domainObjects when platform=1c)"
        },
        "goServices": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Go microservices (when platform=go or hybrid)"
        },
        "integrations": { "type": "array", "items": { "type": "string" } },
        "estimate": { "type": "string" }
      }
    },

    "agentOutput_Agent6_Presenter": {
      "type": "object",
      "description": "DEPRECATED: replaced by Agent 15 (Trainer). Kept for backward compatibility.",
      "properties": {
        "format": { "type": "string" },
        "audience": { "type": "string" },
        "sections": { "type": "array", "items": { "type": "string" } }
      }
    },

    "agentOutput_Agent7_Publisher": {
      "type": "object",
      "description": "Output schema for Agent 7 (Publisher)",
      "required": ["result"],
      "properties": {
        "result": { "$ref": "#/definitions/publishResult" }
      }
    },

    "agentOutput_Agent8_BPMN": {
      "type": "object",
      "description": "Output schema for Agent 8 (BPMN Designer)",
      "required": ["result"],
      "properties": {
        "result": { "$ref": "#/definitions/bpmnResult" }
      }
    },

    "agentOutput_Agent11_Dev1C": {
      "type": "object",
      "description": "Output schema for Agent 11 (Developer 1ะก)",
      "properties": {
        "generatedFiles": { "type": "array", "items": { "type": "string" }, "description": "List of generated BSL files" },
        "validationResults": {
          "type": "object",
          "properties": {
            "bslChecks": { "type": "integer" },
            "warnings": { "type": "integer" },
            "errors": { "type": "integer" }
          }
        },
        "modules": { "type": "array", "items": { "type": "string" }, "description": "Generated module names" }
      }
    },

    "agentOutput_Agent12_DevGo": {
      "type": "object",
      "description": "Output schema for Agent 12 (Developer Go+React)",
      "properties": {
        "generatedFiles": { "type": "array", "items": { "type": "string" } },
        "lintResults": {
          "type": "object",
          "properties": {
            "golangciLint": { "type": "integer" },
            "eslint": { "type": "integer" }
          }
        },
        "services": { "type": "array", "items": { "type": "string" }, "description": "Generated Go service names" },
        "components": { "type": "array", "items": { "type": "string" }, "description": "Generated React component names" }
      }
    },

    "agentOutput_Agent13_QA1C": {
      "type": "object",
      "description": "Output schema for Agent 13 (QA 1ะก)",
      "properties": {
        "testSuites": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string", "enum": ["unit", "bdd", "smoke", "integration"] },
              "testCount": { "type": "integer" }
            }
          }
        },
        "coverageReport": {
          "type": "object",
          "properties": {
            "lineCoverage": { "type": "number" },
            "branchCoverage": { "type": "number" }
          }
        },
        "staticAnalysis": {
          "type": "object",
          "properties": {
            "bslChecks": { "type": "integer" },
            "issues": { "type": "integer" }
          }
        }
      }
    },

    "agentOutput_Agent14_QAGo": {
      "type": "object",
      "description": "Output schema for Agent 14 (QA Go+React)",
      "properties": {
        "goTestResults": {
          "type": "object",
          "properties": {
            "packages": { "type": "integer" },
            "tests": { "type": "integer" },
            "passed": { "type": "integer" },
            "failed": { "type": "integer" },
            "coverage": { "type": "number" }
          }
        },
        "reactTestResults": {
          "type": "object",
          "properties": {
            "suites": { "type": "integer" },
            "tests": { "type": "integer" },
            "passed": { "type": "integer" },
            "coverage": { "type": "number" }
          }
        },
        "e2eResults": {
          "type": "object",
          "properties": {
            "scenarios": { "type": "integer" },
            "passed": { "type": "integer" },
            "failed": { "type": "integer" }
          }
        }
      }
    },

    "agentOutput_Agent15_Trainer": {
      "type": "object",
      "description": "Output schema for Agent 15 (Trainer)",
      "properties": {
        "documents": { "type": "array", "items": { "type": "string" }, "description": "Generated document file names" },
        "documentTypes": {
          "type": "array",
          "items": { "type": "string", "enum": ["user-guide", "admin-guide", "quick-start", "faq", "release-notes", "video-script"] }
        },
        "fmVersion": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
      }
    },

    "agentOutput_Agent16_ReleaseEngineer": {
      "type": "object",
      "description": "Output schema for Agent 16 (Release Engineer). Produced after deploy/release operations.",
      "required": ["deployedVersion", "environment", "qualityGateResults", "rollbackAvailable"],
      "properties": {
        "deployedVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version deployed (e.g. 1.0.0)"
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"],
          "description": "Target environment"
        },
        "qualityGateResults": {
          "type": "object",
          "description": "Results of 12-point Quality Gate check",
          "properties": {
            "passed": { "type": "boolean" },
            "totalChecks": { "type": "integer", "const": 12 },
            "passedChecks": { "type": "integer", "minimum": 0, "maximum": 12 },
            "failedChecks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "changelog": {
          "type": "string",
          "description": "Generated changelog from conventional commits"
        },
        "rollbackAvailable": {
          "type": "boolean",
          "description": "Whether rollback to previous version is available"
        },
        "rollbackVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Previous version for rollback (if available)"
        },
        "deployTimestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the deploy was executed"
        },
        "monitoringStatus": {
          "type": "string",
          "enum": ["pending", "monitoring", "healthy", "degraded", "rolled-back"],
          "description": "Post-deploy monitoring status"
        },
        "errorRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Error rate during post-deploy monitoring (%)"
        },
        "notificationsSent": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "channel": { "type": "string", "enum": ["telegram", "confluence", "email"] },
              "status": { "type": "string", "enum": ["sent", "failed"] }
            }
          }
        }
      }
    }
  }
}
